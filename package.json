{
  "name": "tabulon",
  "version": "1.2.4",
  "description": "Playwright utility for interacting with and extracting structured data from HTML tables using logical selectors.",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "pnpm build:clean && pnpm build:js && pnpm build:types",
    "build:clean": "rm -rf dist && mkdir dist",
    "build:js": "esbuild src/index.ts --bundle --minify --format=esm --outfile=dist/index.js --external:@playwright/test",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "dev": "tsc --watch",
    "test": "playwright test",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "keywords": [
    "playwright",
    "tables",
    "e2e",
    "testing",
    "locator",
    "automation",
    "test-utils"
  ],
  "author": "Kareem Elmaghraby",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kelmaghraby/tabulon.git"
  },
  "packageManager": "pnpm@10.8.0",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@playwright/test": "^1.54.1",
    "@types/node": "^24.0.14",
    "esbuild": "^0.25.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
